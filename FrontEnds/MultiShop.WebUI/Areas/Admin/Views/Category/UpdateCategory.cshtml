@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" readonly class="form-control" asp-for="CategoryId" />
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" />
                        <br />
                        <label>Kategori Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="CategoryImageUrl" />
                        <br />
                        <button class="btn btn-primary">Kategori Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>