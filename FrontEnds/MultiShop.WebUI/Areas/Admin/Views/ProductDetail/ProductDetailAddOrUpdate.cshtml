@model UpdateProductDetailDto
@{
    ViewData["Title"] = "ProductDetailAddOrUpdate";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductDetailId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Resim 1</label>
                        <textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Resim 2</label>
                        <textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
                        <br />
                        <button class="btn btn-primary">Ürün Detaylarını Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>