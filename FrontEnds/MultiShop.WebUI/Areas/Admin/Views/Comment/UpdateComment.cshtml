@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="UserCommentId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" class="form-control" asp-for="UserCommentNameSurname" />
                        <br />
                        <label>Kullanıcı Mail Adresi</label>
                        <input type="email" class="form-control" asp-for="UserCommentEmail" />
                        <br />
                        <label>Yorum Oluşturulma Tarihi</label>
                        <input type="text" class="form-control" asp-for="CreatedDate" />
                        <br />
                        <label>Kullanıcı Resim Dosya Yolu</label>
                        <input type="text" class="form-control" asp-for="UserCommentImageUrl" />
                        <br />
                        <label>Verilen Puan</label>
                        <input type="text" class="form-control" asp-for="UserCommentRating" />
                        <br />
                        <label>Aktifliği</label>
                        <input type="text" class="form-control" asp-for="UserCommentStatus" />
                        <br />
                        <label>Ürün Yorumu</label>
                        <textarea class="form-control" asp-for="UserCommentCommentDetail" rows="3"></textarea>
                        <br />
                        <button class="btn btn-primary">Yorumu Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>