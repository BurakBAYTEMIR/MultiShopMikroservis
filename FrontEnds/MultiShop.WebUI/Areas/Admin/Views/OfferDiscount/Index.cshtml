@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Özel Teklif Başlığı</th>
                                <th>Özel Teklif Alt Başlığı </th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OfferDiscountTitle</td>
                                    <td>@item.OfferDiscountSubTitle</td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn btn-warning">Güncelle</a></td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.Count < 2)
                {
                    <a href="/Admin/OfferDiscount/CreateOfferDiscount/" class="btn btn-primary">Özel Teklif Ekle</a>
                }
            </div>
        </div>
    </div>
</section>