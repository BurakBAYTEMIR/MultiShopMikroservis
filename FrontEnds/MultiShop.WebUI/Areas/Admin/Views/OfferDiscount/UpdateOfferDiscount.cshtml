@model UpdateOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="OfferDiscountId" />
                        <label>Özel Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="OfferDiscountTitle" />
                        <br />
                        <label>Özel Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="OfferDiscountSubTitle" />
                        <br />
                        <label>Özel Teklif Buton Adı</label>
                        <input type="text" class="form-control" asp-for="OfferDiscountButtonTitle" />
                        <br />
                        <label>Özel Teklif Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="OfferDiscountImageUrl" />
                        <br />
                        <button class="btn btn-primary">Özel Teklifi Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>