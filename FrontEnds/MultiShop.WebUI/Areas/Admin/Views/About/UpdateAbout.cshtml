@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="AboutId" />
                        <label>Hakkımda Açıklaması</label>
                        <input type="text" class="form-control" asp-for="AboutDescription" />
                        <br />
                        <label>Hakkımda Email</label>
                        <input type="email" class="form-control" asp-for="AboutEmail" />
                        <br />
                        <label>Hakkımda Adresi</label>
                        <input type="text" class="form-control" asp-for="AboutAddress" />
                        <br />
                        <label>Hakkımda Telefon Numarası</label>
                        <input type="text" class="form-control" asp-for="AboutPhone" />
                        <br />
                        <button class="btn btn-primary">Hakkımda Güncelle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>